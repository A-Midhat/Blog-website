<%- include('header') -%>

    <div class="signup-page">
        <h2>Create a free account now!</h2>
        
            <form action="/signup" method="post">
                <div class="signup-container">
                    <div class="sameRow">    
                        <input type="text" placeholder="Enter your First Name" name="fname" class="name">
                        <input type="text" placeholder="Enter your Lasr Name" name="lname" class="name">
                    </div>
                    <input type="email" name="email" class="email" placeholder="Enter your email">
                    <input type="password" name="password" class="password" placeholder="password">
                    <button type="submit" class="signupButton">Sign up</button>
                </div>    
            </form>   
        
    </div>
<%- include('footer') -%>